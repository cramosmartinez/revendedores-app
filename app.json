{
  "expo": {
    "name": "Revendedores Pro",
    "slug": "revendedores-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/revendedores.png",
    "scheme": "revendedores-app",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/revendedores.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.carlos.revendedoresapp",
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "whatsapp"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/revendedores.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.carlos.revendedoresapp", 
      "permissions": [
        "INTERNET",
        "CAMERA", 
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker" 
      // *** IMPORTANTE: QUITAMOS expo-print y expo-sharing ***
      // Se pueden añadir después cuando el bug se resuelva
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "79055c60-5e30-430c-ae2e-010505efd479"
      }
    }
  }
}